<body>
  <div class="container p-4">
      <div class="row">
          <div class="col-md-4 mx-auto">
              <div class="card">
                  <div class="card-header">
                      <h3>Añadir Nuevo Empleado</h3>
                  </div>
                  <div class="card-body">
                      <form action="/links/empleado" method="POST" id="employeeForm">
                          <div class="form-group"> 
                              <input type="text" class="form-control" name="username" placeholder="Nombre de usuario" required autofocus>
                          </div>
                          <br>
                          <div class="form-group">
                              <input type="password" class="form-control" name="password" placeholder="Contraseña" required>
                          </div>
                          <br>
                          <div class="form-group">
                              <input type="text" class="form-control" name="nombre_completo" placeholder="Nombre Completo" required>
                          </div>
                          <br>
                          <div class="form-group">
                              <input type="text" class="form-control" name="id" placeholder="Número de Identificación" required>
                          </div>
                          <br>

                          <div class="form-group">
                              <input type="text" class="form-control" name="telefono" placeholder="Teléfono" required>
                          </div>
                          <br>

                          <div class="form-group">
                              
                          

                              <select class="form-control" name="roles" id="roles"  required>
                                  <option value="">Seleccione un rol</option>
                                  <br>
                                  <option value="domiciliario">Domiciliario</option>
                                  <br>
                                  <option value="bodega">Bodega</option>
                                  <br>
                                    <option value="cajero">Cajero</option>
                              </select>
                          </div>
                          <br>
                          <div id="vehiculoSection" style="display: none;">
                              <div class="form-group">
                                  <label for="tipo_vehiculo">Tipo de Vehículo</label>
                                  <select class="form-control" name="tipo_vehiculo" id="tipo_vehiculo">
                                      <option value="">Seleccione un tipo de vehículo</option>
                                      <option value="bicicleta">Bicicleta</option>
                                      <option value="moto">Moto</option>
                                      <option value="carro">Carro</option>
                                  </select>
                              </div>
                              <br>
                              <div class="form-group" id="licenciaSection" style="display: none;">
                                  <input type="text" class="form-control" name="numero_licencia" placeholder="Número de Licencia">
                              </div>
                              <br>
                              <div class="form-group" id="vencimientoSection" style="display: none;">
                                  <label for="fecha_vencimiento_licencia">Fecha de Vencimiento de la Licencia</label>
                                  <input type="date" class="form-control" name="fecha_vencimiento_licencia" id="fecha_vencimiento_licencia">
                              </div>
                          </div>
                          <br>
                          <div class="form-group d-grid gap-2">
                              <button type="submit" class="btn btn-success btn-block">Guardar</button>
                          </div>
                      </form>
                  </div>
              </div>
          </div>
      </div>
  </div>
    <div style="position: fixed; bottom: 20px; left: 20px;">
    <a href="/links/" class="btn btn-primary">Volver</a>
  </div>
  {{#if script}}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        {{{script}}}
    </script>
  {{/if}}
  <script>
    document.getElementById('roles').addEventListener('change', function() {
        const vehiculoSection = document.getElementById('vehiculoSection');
        vehiculoSection.style.display = this.value === 'domiciliario' ? 'block' : 'none';
    });

    document.getElementById('tipo_vehiculo').addEventListener('change', function() {
        const licenciaSection = document.getElementById('licenciaSection');
        const vencimientoSection = document.getElementById('vencimientoSection');
        if (this.value === 'moto' || this.value === 'carro') {
            licenciaSection.style.display = 'block';
            vencimientoSection.style.display = 'block';
        } else {
            licenciaSection.style.display = 'none';
            vencimientoSection.style.display = 'none';
        }
    });
  </script>
</body>
</html>