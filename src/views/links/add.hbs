<body>
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h3>Añadir Nuevo Producto</h3>
                    </div>
                    <div class="card-body">
                        <form action="/links/add" method="POST">
                            <div class="form-group">
                                <input type="text" class="form-control" name="id" placeholder="Código del producto"
                                    autofocus>
                            </div>
                            <br>
                            <div class="form-group">
                                <input type="text" class="form-control" name="urlimagen" placeholder="URL de la imagen">
                            </div>
                            <br>
                            <div class="form-group">
                                <input type="text" class="form-control" name="nombre" placeholder="Nombre del producto">
                            </div>
                            <br>
                            <div class="form-group">
                                <input type="text" class="form-control" name="descripcion" placeholder="Descripción">
                            </div>
                            <br>
                            <div class="form-group">
                                <input type="number" class="form-control" name="precio" placeholder="Precio">
                            </div>
                            <br>
                            <div class="form-group">
                                <select class="form-control" name="categoria" id="categoria" required>
                                    <option value="">Seleccione una categoría</option>
                                    <option value="antibioticos">Antibióticos</option>
                                    <option value="analgesicos">Analgésicos y Antiinflamatorios</option>
                                    <option value="antigripales">Antigripales y Resfriados</option>
                                    <option value="antihipertensivos">Antihipertensivos</option>
                                    <option value="antidiabeticos">Antidiabéticos</option>
                                    <option value="vitaminas">Vitaminas y Suplementos</option>
                                </select>
                            </div>
                            <br>
                            <div class="form-group">
                                <input type="text" class="form-control" name="confirmaciondedisponibilidad"
                                    placeholder="Disponibilidad">
                            </div>
                            <br>
                            <div class="form-group d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-block">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="position: fixed; bottom: 20px; left: 20px;">
        <a href="/links/" class="btn btn-primary">Volver</a>
    </div>
    {{#if script}}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        { { { script } } }
    </script>
    {{/if}}
</body>

</html>